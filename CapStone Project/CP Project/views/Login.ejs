<%- include("partials/header.ejs") %>

    <div align="center">
        <div class="Styling">
            <% if(error) {%>
                <h6 class="error">Invalid email or password.</h6>
                <% } %>
                    <form action="/Login" method="POST">
                        <h1 class="title">Cap Stone</h1>
                        <div>
                            <input class="name" type="text" name="Name" placeholder="Full Name" required>
                        </div>
                        <div>
                            <input class="name" type="text" name="email" placeholder="Email" required>
                        </div>
                        <div>
                            <input class="password" type="text" name="password" placeholder="Password" required>
                        </div>
                        <button class="sub" type="Login">Log In</button>
                    </form>

        </div>
    </div>
    <%- include("partials/footer.ejs") %>